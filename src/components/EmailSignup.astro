---
/**
 * EmailSignup Component
 * Multi-purpose email signup: Newsletter + Feature Updates
 */

interface Props {
  title: string;
  subtitle?: string;
  emailPlaceholder: string;
  submitText: string;
  updatesLabel: string;
  newsletterLabel: string;
  successMessage: string;
  errorMessage: string;
}

const {
  title,
  subtitle,
  emailPlaceholder,
  submitText,
  updatesLabel,
  newsletterLabel,
  successMessage,
  errorMessage
} = Astro.props;
---

<section class="email-signup-section">
  <div class="container">
    <div class="signup-card">
      <h2 class="signup-title">{title}</h2>
      {subtitle && <p class="signup-subtitle">{subtitle}</p>}

      <form class="signup-form" id="email-signup-form">
        <div class="form-row">
          <div class="input-wrapper">
            <input
              type="email"
              name="email"
              placeholder={emailPlaceholder}
              required
              class="email-input"
            />
          </div>
          <button type="submit" class="submit-btn">
            <span class="btn-text">{submitText}</span>
            <span class="btn-loading" hidden>
              <svg class="spinner" width="20" height="20" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" stroke-dasharray="31.4" stroke-dashoffset="10" />
              </svg>
            </span>
          </button>
        </div>

        <div class="checkbox-group">
          <label class="checkbox-label">
            <input type="checkbox" name="feature_updates" checked />
            <span class="checkmark"></span>
            <span class="label-text">{updatesLabel}</span>
          </label>
          <label class="checkbox-label">
            <input type="checkbox" name="newsletter" checked />
            <span class="checkmark"></span>
            <span class="label-text">{newsletterLabel}</span>
          </label>
        </div>

        <!-- Messages -->
        <div class="form-message success" id="success-message" hidden>
          <span>{successMessage}</span>
        </div>
        <div class="form-message error" id="error-message" hidden>
          <span>{errorMessage}</span>
        </div>
      </form>

      <p class="privacy-note">
        We respect your privacy. Unsubscribe anytime.
      </p>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('email-signup-form') as HTMLFormElement;
  const submitBtn = form?.querySelector('.submit-btn') as HTMLButtonElement;
  const btnText = submitBtn?.querySelector('.btn-text') as HTMLElement;
  const btnLoading = submitBtn?.querySelector('.btn-loading') as HTMLElement;
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Show loading state
    btnText.hidden = true;
    btnLoading.hidden = false;
    submitBtn.disabled = true;
    successMessage!.hidden = true;
    errorMessage!.hidden = true;

    const formData = new FormData(form);
    const data = {
      email: formData.get('email'),
      feature_updates: formData.get('feature_updates') === 'on',
      newsletter: formData.get('newsletter') === 'on',
    };

    try {
      const response = await fetch('/api/subscribe', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        successMessage!.hidden = false;
        form.reset();
      } else {
        throw new Error('Subscription failed');
      }
    } catch (error) {
      errorMessage!.hidden = false;
      console.error('Subscription error:', error);
    } finally {
      // Reset button state
      btnText.hidden = false;
      btnLoading.hidden = true;
      submitBtn.disabled = false;
    }
  });
</script>

<style>
  .email-signup-section {
    padding: var(--spacing-4xl) 0;
    background: var(--bg-primary);
  }

  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .signup-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: var(--border-radius-xl);
    padding: var(--spacing-2xl);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .signup-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 300px;
    height: 150px;
    background: var(--accent-primary-glow);
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.2;
  }

  .signup-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
    position: relative;
  }

  .signup-title {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: var(--spacing-sm);
    position: relative;
  }

  .signup-subtitle {
    color: var(--text-secondary);
    font-size: var(--text-base);
    margin-bottom: var(--spacing-xl);
    position: relative;
  }

  .signup-form {
    position: relative;
  }

  .form-row {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
  }

  .input-wrapper {
    flex: 1;
  }

  .email-input {
    width: 100%;
    height: 52px;
    padding: 0 var(--spacing-lg);
    font-size: var(--text-base);
    background: var(--bg-primary);
    border: 1px solid var(--border-default);
    border-radius: var(--border-radius-md);
    color: var(--text-primary);
    transition: all var(--transition-base);
    box-sizing: border-box;
  }

  .email-input:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px var(--accent-primary-glow);
  }

  .email-input::placeholder {
    color: var(--text-tertiary);
  }

  .submit-btn {
    height: 52px;
    padding: 0 var(--spacing-xl);
    font-size: var(--text-base);
    font-weight: 600;
    background: var(--gradient-primary);
    color: white;
    border: none;
    border-radius: var(--border-radius-md);
    cursor: pointer;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 120px;
    box-sizing: border-box;
    flex-shrink: 0;
  }

  .submit-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: var(--glow-primary);
  }

  .submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .spinner {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .checkbox-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    align-items: flex-start;
    margin-bottom: var(--spacing-lg);
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    cursor: pointer;
    font-size: var(--text-sm);
    color: var(--text-secondary);
    user-select: none;
  }

  .checkbox-label input[type="checkbox"] {
    display: none;
  }

  .checkmark {
    width: 20px;
    height: 20px;
    border: 2px solid var(--border-default);
    border-radius: var(--border-radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-base);
    flex-shrink: 0;
  }

  .checkmark::after {
    content: 'âœ“';
    font-size: 12px;
    color: white;
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .checkbox-label input:checked + .checkmark {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
  }

  .checkbox-label input:checked + .checkmark::after {
    opacity: 1;
  }

  .label-text {
    flex: 1;
    text-align: left;
  }

  .form-message {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md);
    border-radius: var(--border-radius-md);
    font-size: var(--text-sm);
    font-weight: 500;
    margin-bottom: var(--spacing-md);
  }

  .form-message[hidden] {
    display: none !important;
  }

  .form-message.success {
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    color: var(--color-profit);
  }

  .form-message.error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: var(--color-loss);
  }

  .privacy-note {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    margin-top: var(--spacing-md);
    position: relative;
  }

  /* Mobile adjustments */
  @media (max-width: 480px) {
    .form-row {
      flex-direction: column;
    }

    .submit-btn {
      width: 100%;
    }

    .checkbox-group {
      align-items: stretch;
    }
  }
</style>

      <!-- Candle 21 - Red -->
      <line x1="880" y1="120" x2="880" y2="200" stroke="#EF4444" stroke-width="1.5"/>
      <rect x="872" y="140" width="16" height="40" fill="#EF4444"/>

      <!-- Candle 22 - Green -->
      <line x1="920" y1="100" x2="920" y2="190" stroke="#22C55E" stroke-width="1.5"/>

      <!-- Candle 24 - Green -->
      <line x1="1000" y1="60" x2="1000" y2="140" stroke="#22C55E" stroke-width="1.5"/>
      <rect x="992" y="70" width="16" height="50" fill="#22C55E"/>

      <!-- Candle 25 - Red -->
      <line x1="1040" y1="50" x2="1040" y2="130" stroke="#EF4444" stroke-width="1.5"/>
      <rect x="1032" y="70" width="16" height="40" fill="#EF4444"/>

      <!-- Candle 26 - Green -->
      <line x1="1080" y1="40" x2="1080" y2="120" stroke="#22C55E" stroke-width="1.5"/>
      <rect x="1072" y="50" width="16" height="50" fill="#22C55E"/>

      <!-- Candle 27 - Green -->
      <line x1="1120" y1="30" x2="1120" y2="100" stroke="#22C55E" stroke-width="1.5"/>
      <rect x="1112" y="40" width="16" height="40" fill="#22C55E"/>
    </g>


    <!-- MA50 Line (Cyan) - Slower Moving Average -->
    <path
      class="ma-line ma50"
      d="M 80 380
         Q 160 390, 240 380
         T 400 350
         T 560 300
         T 720 230
         T 880 190
         T 1040 140
         T 1120 100"
      fill="none"
      stroke="#22D3EE"
      stroke-width="2"
      stroke-linecap="round"
      opacity="0.5"
    />



    <!-- Fade overlays -->
    <rect x="0" y="0" width="150" height="600" fill="url(#fadeLeft)"/>
    <rect x="1050" y="0" width="150" height="600" fill="url(#fadeRight)"/>
    <rect x="0" y="400" width="1200" height="200" fill="url(#fadeBottom)"/>
  </svg>
</div>

<style>
  .hero-chart-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    overflow: hidden;
    opacity: 0.4;
  }

  .hero-chart-bg svg {
    width: 100%;
    height: 100%;
    min-height: 600px;
  }

  /* Subtle animation for MA lines */
  .ma-line {
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: drawLine 3s ease-out forwards;
  }

  .ma50 {
    animation-delay: 0.5s;
  }

  @keyframes drawLine {
    to {
      stroke-dashoffset: 0;
    }
  }

  /* Candle fade in animation */
  .candles {
    animation: fadeIn 1.5s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 0.6;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-chart-bg {
      opacity: 0.25;
    }
  }
</style>

---
// Candlestick Chart Background SVG
// Trading View style with candles, MA lines, and grid
---

<div class="hero-chart-bg">
  <svg viewBox="0 0 1200 600" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <!-- Gradient for glow effect -->
      <linearGradient id="glowGradient" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#F59E0B;stop-opacity:0.3" />
        <stop offset="100%" style="stop-color:#F59E0B;stop-opacity:0" />
      </linearGradient>

      <!-- Fade out gradient for edges -->
      <linearGradient id="fadeLeft" x1="0%" y1="0%" x2="10%" y2="0%">
        <stop offset="0%" style="stop-color:#0F172A;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#0F172A;stop-opacity:0" />
      </linearGradient>
      <linearGradient id="fadeRight" x1="90%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" style="stop-color:#0F172A;stop-opacity:0" />
        <stop offset="100%" style="stop-color:#0F172A;stop-opacity:1" />
      </linearGradient>
      <linearGradient id="fadeBottom" x1="0%" y1="70%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#0F172A;stop-opacity:0" />
        <stop offset="100%" style="stop-color:#0F172A;stop-opacity:1" />
      </linearGradient>

      <!-- Glow filter -->
      <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
        <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
        <feMerge>
          <feMergeNode in="coloredBlur"/>
          <feMergeNode in="SourceGraphic"/>
        </feMerge>
      </filter>
    </defs>

    <!-- Grid lines -->
    <g class="grid" opacity="0.1">
      <!-- Horizontal lines -->
      <line x1="0" y1="100" x2="1200" y2="100" stroke="#64748B" stroke-width="1"/>
      <line x1="0" y1="200" x2="1200" y2="200" stroke="#64748B" stroke-width="1"/>
      <line x1="0" y1="300" x2="1200" y2="300" stroke="#64748B" stroke-width="1"/>
      <line x1="0" y1="400" x2="1200" y2="400" stroke="#64748B" stroke-width="1"/>
      <line x1="0" y1="500" x2="1200" y2="500" stroke="#64748B" stroke-width="1"/>
      <!-- Vertical lines -->
      <line x1="200" y1="0" x2="200" y2="600" stroke="#64748B" stroke-width="1"/>
      <line x1="400" y1="0" x2="400" y2="600" stroke="#64748B" stroke-width="1"/>
      <line x1="600" y1="0" x2="600" y2="600" stroke="#64748B" stroke-width="1"/>
      <line x1="800" y1="0" x2="800" y2="600" stroke="#64748B" stroke-width="1"/>
      <line x1="1000" y1="0" x2="1000" y2="600" stroke="#64748B" stroke-width="1"/>
    </g>

    <!-- Candlesticks -->
    <g class="candles" opacity="0.6">
      <!-- Candle 1 - Red -->
      <line x1="80" y1="280" x2="80" y2="380" stroke="#EF4444" stroke-width="1.5"/>
      <rect x="72" y="300" width="16" height="60" fill="#EF4444"/>

      <!-- Candle 2 - Red -->
      <line x1="120" y1="300" x2="120" y2="420" stroke="#EF4444" stroke-width="1.5"/>
      <rect x="112" y="330" width="16" height="70" fill="#EF4444"/>

      <!-- Candle 3 - Green -->
      <line x1="160" y1="340" x2="160" y2="450" stroke="#22C55E" stroke-width="1.5"/>
      <rect x="152" y="380" width="16" height="50" fill="#22C55E"/>

      <!-- Candle 4 - Green -->
      <line x1="200" y1="320" x2="200" y2="410" stroke="#22C55E" stroke-width="1.5"/>
      <rect x="192" y="340" width="16" height="50" fill="#22C55E"/>

      <!-- Candle 5 - Green -->
      <line x1="240" y1="280" x2="240" y2="370" stroke="#22C55E" stroke-width="1.5"/>
      <rect x="232" y="290" width="16" height="60" fill="#22C55E"/>

      <!-- Candle 6 - Red -->
      <line x1="280" y1="260" x2="280" y2="340" stroke="#EF4444" stroke-width="1.5"/>
      <rect x="272" y="280" width="16" height="40" fill="#EF4444"/>

      <!-- Candle 7 - Red -->
      <line x1="320" y1="290" x2="320" y2="380" stroke="#EF4444" stroke-width="1.5"/>
      <rect x="312" y="310" width="16" height="50" fill="#EF4444"/>

      <!-- Candle 8 - Green (Doji) -->
      <line x1="360" y1="300" x2="360" y2="400" stroke="#22C55E" stroke-width="1.5"/>

      <!-- Candle 9 - Green -->
      <line x1="400" y1="280" x2="400" y2="380" stroke="#22C55E" stroke-width="1.5"/>
      <rect x="392" y="300" width="16" height="60" fill="#22C55E"/>

      <!-- Candle 10 - Green -->
      <line x1="440" y1="240" x2="440" y2="330" stroke="#22C55E" stroke-width="1.5"/>
      <rect x="432" y="250" width="16" height="60" fill="#22C55E"/>

      <!-- Candle 11 - Green -->
      <line x1="480" y1="200" x2="480" y2="290" stroke="#22C55E" stroke-width="1.5"/>

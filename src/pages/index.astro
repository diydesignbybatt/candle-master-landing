---
// Candle Master Landing Page - English (Default)
import HeroBackground from '../components/HeroBackground.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { useTranslations } from '../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

const appUrl = 'https://app.candlemaster.app';
const webUrl = 'https://web.candlemaster.app';
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <title>{t.meta.title}</title>
    <meta name="description" content={t.meta.description} />
    <meta name="keywords" content="trading simulator, candlestick patterns, stock trading game, trading practice, blind trading, learn trading" />

    <!-- Open Graph -->
    <meta property="og:title" content={t.meta.title} />
    <meta property="og:description" content={t.meta.description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://candlemaster.app" />
    <meta property="og:image" content="https://candlemaster.app/og-image.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={t.meta.title} />
    <meta name="twitter:description" content={t.meta.description} />

    <!-- Canonical & Alternate Languages -->
    <link rel="canonical" href="https://candlemaster.app" />
    <link rel="alternate" hreflang="en" href="https://candlemaster.app/" />
    <link rel="alternate" hreflang="th" href="https://candlemaster.app/th/" />
    <link rel="alternate" hreflang="x-default" href="https://candlemaster.app/" />

    <!-- Google Fonts - Geist (Claude-like) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- Geist Font from Vercel -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.2.0/dist/fonts/geist-sans/style.min.css">

    <!-- Theme CSS -->
    <style>
      @import '../styles/theme.css';
    </style>
  </head>

  <body>
    <main>
      <!-- Hero Section -->
      <section class="hero">
        <!-- Language Switcher (Top Right) -->
        <div class="lang-switcher-container">
          <LanguageSwitcher currentLang={lang} currentPath="/" />
        </div>
        <div class="hero-bg"></div>
        <HeroBackground />
        <div class="container">
          <div class="hero-badge">
            <span class="badge-icon">üéÆ</span>
            <span>{t.hero.badge.replace('üéÆ ', '')}</span>
          </div>
          <h1 class="text-gradient">Candle Master</h1>
          <p class="tagline">{t.hero.title} <span class="text-gradient">{t.hero.titleHighlight}</span></p>
          <p class="free-highlight">100% Free to Play - No Credit Card Required</p>
          <p class="description">{t.hero.description}</p>

          <div class="cta-buttons">
            <a href="https://app.candlemaster.app" class="btn-3d" target="_blank" rel="noopener noreferrer">
              <span class="btn-3d-content">
                <span class="btn-3d-icon">üì±</span>
                <span class="btn-3d-text">Play Free on Mobile</span>
              </span>
              <span class="btn-3d-shine"></span>
            </a>
            <button class="btn btn-secondary btn-coming-soon" disabled>
              <span class="btn-icon">üíª</span>
              {t.hero.cta.desktopComingSoon}
            </button>
          </div>

          <div class="hero-stats">
            <div class="stat">
              <span class="stat-value">$100K</span>
              <span class="stat-label">Starting Capital</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat">
              <span class="stat-value">300+</span>
              <span class="stat-label">{t.hero.stats.stocks}</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat">
              <span class="stat-value">1980-2025</span>
              <span class="stat-label">Historical Data</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="features">
        <div class="container">
          <h2 class="section-title">{t.features.title} <span class="text-gradient">{t.features.titleHighlight}</span></h2>
          <p class="section-subtitle">{t.features.badge}</p>

          <div class="feature-grid">
            <div class="feature-card">
              <div class="feature-icon">üéØ</div>
              <h3>Blind Trading</h3>
              <p>{t.features.cards.realData.description}</p>
            </div>

            <div class="feature-card">
              <div class="feature-icon">üìä</div>
              <h3>{t.features.cards.legendary.title}</h3>
              <p>{t.features.cards.legendary.description}</p>
            </div>

            <div class="feature-card highlight-card">
              <div class="feature-icon">üéì</div>
              <h3>{t.features.cards.academy.title}</h3>
              <p>{t.features.cards.academy.description}</p>
            </div>

            <div class="feature-card">
              <div class="feature-icon">üí∞</div>
              <h3>Risk-Free Practice</h3>
              <p>Start with $100,000 virtual capital. Learn from mistakes without losing real money.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- How It Works -->
      <section class="how-it-works">
        <div class="container">
          <h2 class="section-title">{t.howItWorks.title} <span class="text-gradient">{t.howItWorks.titleHighlight}</span></h2>
          <p class="section-subtitle">Simple gameplay, powerful learning</p>

          <div class="steps">
            <div class="step">
              <div class="step-number">1</div>
              <div class="step-content">
                <h3>{t.howItWorks.steps.step1.title}</h3>
                <p>{t.howItWorks.steps.step1.description}</p>
              </div>
            </div>

            <div class="step-connector"></div>

            <div class="step">
              <div class="step-number">2</div>
              <div class="step-content">
                <h3>{t.howItWorks.steps.step2.title}</h3>
                <p>{t.howItWorks.steps.step2.description}</p>
              </div>
            </div>

            <div class="step-connector"></div>

            <div class="step">
              <div class="step-number">3</div>
              <div class="step-content">
                <h3>{t.howItWorks.steps.step3.title}</h3>
                <p>{t.howItWorks.steps.step3.description}</p>
              </div>
            </div>

            <div class="step-connector"></div>

            <div class="step">
              <div class="step-number">4</div>
              <div class="step-content">
                <h3>{t.howItWorks.steps.step4.title}</h3>
                <p>{t.howItWorks.steps.step4.description}</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Pricing Section -->
      <section class="pricing">
        <div class="container">
          <!-- Promo Banner -->
          <div class="promo-banner">
            <span class="promo-icon">üöÄ</span>
            <span class="promo-text"><strong>Launch Special!</strong> Limited time offer - Save up to 33%</span>
          </div>

          <h2 class="section-title">{t.pricing.title} <span class="text-gradient">{t.pricing.titleHighlight}</span></h2>
          <p class="section-subtitle">
            {t.pricing.coffeeNote}<br>
            <span class="subtitle-emphasis">Your choice.</span>
          </p>

          <div class="pricing-grid three-col">
            <!-- Free Plan -->
            <div class="pricing-card">
              <div class="pricing-header">
                <div class="pricing-badge free-badge">{t.pricing.free.badge}</div>
                <h3 class="pricing-plan">{t.pricing.free.plan}</h3>
                <div class="pricing-price">
                  <span class="price-amount">{t.pricing.free.price}</span>
                  <span class="price-period">{t.pricing.free.period}</span>
                </div>
                <p class="pricing-desc">{t.pricing.free.description}</p>
              </div>

              <ul class="pricing-features">
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.free.features.days}</span>
                </li>
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.free.features.stocks}</span>
                </li>
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.free.features.data}</span>
                </li>
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.free.features.themes}</span>
                </li>
                <li class="feature-item disabled">
                  <span class="feature-icon cross">‚úï</span>
                  <span>Candle Academy</span>
                </li>
                <li class="feature-item disabled">
                  <span class="feature-icon cross">‚úï</span>
                  <span>Position Calculator</span>
                </li>
              </ul>

              <a href={appUrl} class="btn btn-secondary btn-full">
                <span class="btn-icon">üéÆ</span>
                {t.pricing.free.cta}
              </a>
            </div>

            <!-- Pro Monthly -->
            <div class="pricing-card pro">
              <div class="pricing-header">
                <div class="pricing-badge pro-badge">{t.pricing.proMonthly.badge}</div>
                <h3 class="pricing-plan">{t.pricing.proMonthly.plan}</h3>
                <div class="pricing-price">
                  <span class="price-original">{t.pricing.proMonthly.priceOriginal}</span>
                  <span class="price-amount">{t.pricing.proMonthly.price}</span>
                  <span class="price-period">{t.pricing.proMonthly.period}</span>
                </div>
                <p class="pricing-desc">{t.pricing.proMonthly.description}</p>
              </div>

              <ul class="pricing-features">
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proMonthly.features.days}</span>
                </li>
                <li class="feature-item highlight">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proMonthly.features.stocks}</span>
                </li>
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proMonthly.features.data}</span>
                </li>
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proMonthly.features.themes}</span>
                </li>
                <li class="feature-item highlight">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proMonthly.features.academy}</span>
                </li>
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proMonthly.features.updates}</span>
                </li>
              </ul>

              <a href="#" class="btn btn-primary btn-full" id="checkout-monthly-btn">
                <span class="btn-icon">‚ö°</span>
                {t.pricing.proMonthly.cta}
              </a>
              <p class="pricing-note">Cancel anytime. No questions asked.</p>
            </div>

            <!-- Pro Lifetime -->
            <div class="pricing-card pro lifetime">
              <div class="pricing-header">
                <div class="pricing-badge lifetime-badge">üëë {t.pricing.proLifetime.badge}</div>
                <h3 class="pricing-plan">{t.pricing.proLifetime.plan}</h3>
                <div class="pricing-price">
                  <span class="price-original">{t.pricing.proLifetime.priceOriginal}</span>
                  <span class="price-amount">{t.pricing.proLifetime.price}</span>
                  <span class="price-period">{t.pricing.proLifetime.period}</span>
                </div>
                <p class="pricing-desc">{t.pricing.proLifetime.description}</p>
              </div>

              <ul class="pricing-features">
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proLifetime.features.everything}</span>
                </li>
                <li class="feature-item highlight">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proLifetime.features.forever}</span>
                </li>
                <li class="feature-item highlight">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proLifetime.features.updates}</span>
                </li>
                <li class="feature-item">
                  <span class="feature-icon check">‚úì</span>
                  <span>{t.pricing.proLifetime.features.support}</span>
                </li>
              </ul>

              <a href="#" class="btn btn-primary btn-full btn-lifetime" id="checkout-lifetime-btn">
                <span class="btn-icon">üëë</span>
                {t.pricing.proLifetime.cta}
              </a>
              <p class="pricing-note">One-time payment. No subscription.</p>
            </div>
          </div>

          <!-- Value Comparison -->
          <div class="value-comparison">
            <div class="comparison-item loss">
              <span class="comparison-icon">üìâ</span>
              <div class="comparison-content">
                <span class="comparison-label">Average beginner loss in real market</span>
                <span class="comparison-value">-$1,000 to -$10,000+</span>
              </div>
            </div>
            <div class="comparison-vs">VS</div>
            <div class="comparison-item gain">
              <span class="comparison-icon">‚òï</span>
              <div class="comparison-content">
                <span class="comparison-label">Learn with Candle Master PRO</span>
                <span class="comparison-value">$3.99/mo or $29.99 forever</span>
              </div>
            </div>
          </div>

          <div class="pricing-faq">
            <p class="faq-item">
              <strong>Already playing?</strong> You can upgrade to PRO directly in the app settings.
            </p>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="cta-section">
        <div class="container">
          <div class="cta-card">
            <h2>{t.cta.title} <span class="text-gradient">{t.cta.titleHighlight}</span></h2>
            <p class="cta-free-text">Start playing now - <strong>100% FREE forever</strong></p>
            <p class="cta-sub">{t.cta.description}</p>
            <a href={appUrl} class="btn btn-primary btn-large">
              <span class="btn-icon">üöÄ</span>
              Start Playing Free
            </a>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <footer>
        <div class="container">
          <div class="footer-content">
            <div class="footer-brand">
              <span class="footer-logo">üïØÔ∏è</span>
              <span class="footer-name">Candle Master</span>
            </div>
            <p class="footer-copyright">{t.footer.copyright}</p>
          </div>
        </div>
      </footer>
    </main>

    <!-- Stripe Checkout Script -->
    <script>
      // Stripe Payment Links
      // TODO: Replace with your actual Stripe Payment Links
      const STRIPE_LINKS = {
        monthly: 'https://buy.stripe.com/YOUR_MONTHLY_LINK',  // $3.99/mo (Launch price)
        lifetime: 'https://buy.stripe.com/YOUR_LIFETIME_LINK' // $29.99 one-time (Launch price)
      };

      document.addEventListener('DOMContentLoaded', () => {
        const monthlyBtn = document.getElementById('checkout-monthly-btn');
        const lifetimeBtn = document.getElementById('checkout-lifetime-btn');

        function handleCheckout(type) {
          const link = STRIPE_LINKS[type];

          if (link.includes('YOUR_')) {
            alert('Stripe checkout is not configured yet. Please upgrade to PRO from within the app settings.');
            return;
          }

          window.location.href = link;
        }

        if (monthlyBtn) {
          monthlyBtn.addEventListener('click', (e) => {
            e.preventDefault();
            handleCheckout('monthly');
          });
        }

        if (lifetimeBtn) {
          lifetimeBtn.addEventListener('click', (e) => {
            e.preventDefault();
            handleCheckout('lifetime');
          });
        }
      });
    </script>
  </body>
</html>

<style>
  @import '../styles/theme.css';

  /* Reset & Base */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-primary);
    scroll-behavior: smooth;
  }

  body {
    background: var(--bg-primary);
    color: var(--text-primary);
    min-height: 100vh;
    overflow-x: hidden;
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  /* Language Switcher Container */
  .lang-switcher-container {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
    z-index: 100;
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: var(--border-radius-md);
    padding: var(--spacing-xs);
  }

  /* Section Titles */
  .section-title {
    font-family: var(--font-display);
    text-align: center;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: var(--spacing-md);
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-secondary);
    font-size: var(--text-lg);
    margin-bottom: var(--spacing-3xl);
  }

  /* ============================================
     HERO SECTION
     ============================================ */
  .hero {
    position: relative;
    padding: var(--spacing-4xl) 0 var(--spacing-3xl);
    text-align: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--gradient-bg-radial);
    z-index: -1;
  }

  .hero-bg::before {
    content: '';
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 600px;
    background: var(--accent-primary-glow);
    border-radius: 50%;
    filter: blur(120px);
    opacity: 0.4;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xl);
  }

  .badge-icon {
    font-size: var(--text-base);
  }

  .hero h1 {
    font-family: var(--font-display);
    font-size: clamp(3rem, 12vw, 5rem);
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.03em;
    margin-bottom: var(--spacing-lg);
  }

  .tagline {
    font-size: clamp(1.125rem, 3vw, 1.5rem);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  .free-highlight {
    display: inline-block;
    background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 50%, #C084FC 100%);
    color: white;
    padding: var(--spacing-xs) var(--spacing-lg);
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
    margin-bottom: var(--spacing-lg);
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.4);
  }

  .description {
    font-size: var(--text-lg);
    color: var(--text-tertiary);
    max-width: 600px;
    margin: 0 auto var(--spacing-2xl);
    line-height: 1.7;
  }

  /* Buttons */
  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--spacing-3xl);
    width: 100%;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md) var(--spacing-xl);
    border-radius: var(--border-radius-md);
    font-size: var(--text-base);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-base);
    cursor: pointer;
    white-space: nowrap;
    min-height: 52px;
  }

  .btn-icon {
    font-size: var(--text-xl);
  }

  .btn-primary {
    background: var(--gradient-primary);
    color: white;
    border: none;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--glow-primary);
  }

  .btn-secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-default);
  }

  .btn-secondary:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-light);
  }

  .btn-coming-soon {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .btn-coming-soon:hover {
    transform: none;
    background: var(--bg-secondary);
  }

  .btn-large {
    padding: var(--spacing-md) var(--spacing-2xl);
    font-size: var(--text-lg);
    min-height: 56px;
  }

  /* 3D Gradient Button */
  .btn-3d {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 18px 36px;
    font-size: 1.125rem;
    font-weight: 700;
    text-decoration: none;
    color: #0a0a0a;
    background: linear-gradient(135deg, #FFD700 0%, #FFA500 50%, #FF8C00 100%);
    border: none;
    border-radius: 16px;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow:
      0 6px 0 #B8860B,
      0 8px 20px rgba(255, 165, 0, 0.4),
      inset 0 2px 0 rgba(255, 255, 255, 0.4),
      inset 0 -2px 0 rgba(0, 0, 0, 0.1);
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.3);
    transform: translateY(0);
  }

  .btn-3d:hover {
    transform: translateY(-4px);
    box-shadow:
      0 10px 0 #B8860B,
      0 14px 30px rgba(255, 165, 0, 0.5),
      inset 0 2px 0 rgba(255, 255, 255, 0.5),
      inset 0 -2px 0 rgba(0, 0, 0, 0.1);
  }

  .btn-3d:active {
    transform: translateY(4px);
    box-shadow:
      0 2px 0 #B8860B,
      0 4px 10px rgba(255, 165, 0, 0.3),
      inset 0 2px 0 rgba(255, 255, 255, 0.3),
      inset 0 -2px 0 rgba(0, 0, 0, 0.2);
  }

  .btn-3d-content {
    display: flex;
    align-items: center;
    gap: 12px;
    position: relative;
    z-index: 2;
  }

  .btn-3d-icon {
    font-size: 1.5rem;
    animation: bounce 2s ease-in-out infinite;
  }

  .btn-3d-text {
    letter-spacing: 0.5px;
  }

  .btn-3d-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    transition: left 0.5s ease;

---
// Candle Master - Install/PWA Guide Page (Thai Version)
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'th';
const t = useTranslations(lang);

const appUrl = 'https://app.candlemaster.app';
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <title>{t.install.meta.title}</title>
    <meta name="description" content={t.install.meta.description} />

    <!-- Open Graph -->
    <meta property="og:title" content={t.install.meta.title} />
    <meta property="og:description" content={t.install.meta.description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://candlemaster.app/th/install" />

    <!-- Canonical & Alternate Languages -->
    <link rel="canonical" href="https://candlemaster.app/th/install" />
    <link rel="alternate" hreflang="en" href="https://candlemaster.app/install" />
    <link rel="alternate" hreflang="th" href="https://candlemaster.app/th/install" />
    <link rel="alternate" hreflang="x-default" href="https://candlemaster.app/install" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.2.0/dist/fonts/geist-sans/style.min.css">

    <!-- Theme CSS -->
    <style>
      @import '../../styles/theme.css';
    </style>
  </head>

  <body>
    <main>
      <section class="install-page vignette">
        <!-- Language Switcher (Top Right) -->
        <div class="lang-switcher-container glass-panel">
          <LanguageSwitcher currentLang={lang} currentPath="/th/install" />
        </div>

        <!-- Back to Home Link -->
        <a href="/th/" class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          <span>{t.install.backHome}</span>
        </a>

        <div class="container">
          <!-- Header -->
          <div class="install-header">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="app-icon-large">
              <rect width="512" height="512" rx="96" fill="#1A1D23"/>
              <line x1="170" y1="100" x2="170" y2="160" stroke="#FAF9F6" stroke-width="12" stroke-linecap="round"/>
              <rect x="130" y="160" width="80" height="180" rx="8" fill="none" stroke="#FAF9F6" stroke-width="12"/>
              <line x1="170" y1="340" x2="170" y2="420" stroke="#FAF9F6" stroke-width="12" stroke-linecap="round"/>
              <line x1="342" y1="120" x2="342" y2="180" stroke="#FAF9F6" stroke-width="12" stroke-linecap="round"/>
              <rect x="302" y="180" width="80" height="160" rx="8" fill="#FAF9F6"/>
              <line x1="342" y1="340" x2="342" y2="400" stroke="#FAF9F6" stroke-width="12" stroke-linecap="round"/>
            </svg>
            <h1>{t.install.title} <span class="text-gradient">{t.install.titleHighlight}</span></h1>
            <p class="install-subtitle">{t.install.subtitle}</p>
          </div>

          <!-- Current Option (Play Now) -->
          <div class="current-option">
            <h3>{t.install.currentOption.title}</h3>
            <p>{t.install.currentOption.description}</p>

            <div class="browser-steps glass-panel">
              <div class="step-item">
                <div class="step-num">1</div>
                <p>{t.install.currentOption.step1}</p>
              </div>
              <div class="step-item">
                <div class="step-num">2</div>
                <p>{t.install.currentOption.step2}</p>
              </div>
              <div class="step-item">
                <div class="step-num">3</div>
                <p>{t.install.currentOption.step3}</p>
              </div>
            </div>
          </div>

          <!-- Important Warning -->
          <div class="important-warning">
            <div class="warning-icon">‚ö†Ô∏è</div>
            <div class="warning-content">
              <strong>{t.install.important.title}</strong>
              <p>{t.install.important.description}</p>
            </div>
          </div>

          <!-- Main CTA Button -->
          <div class="main-cta">
            <a href={appUrl} class="btn-3d btn-3d-large" target="_blank" rel="noopener noreferrer">
              <span class="btn-3d-content">
                <span class="btn-3d-icon">üéÆ</span>
                <span class="btn-3d-text">{t.install.cta}</span>
              </span>
              <span class="btn-3d-shine"></span>
            </a>
            <p class="cta-note">{t.install.ctaNote}</p>
          </div>

          <!-- Features Reminder -->
          <div class="features-reminder">
            <div class="feature-pill">
              <span>‚úì</span> {t.install.features.free}
            </div>
            <div class="feature-pill">
              <span>‚úì</span> {t.install.features.noDownload}
            </div>
            <div class="feature-pill">
              <span>‚úì</span> {t.install.features.instant}
            </div>
          </div>

          <!-- Coming Soon Notice -->
          <div class="coming-soon-card glass-panel-strong">
            <div class="coming-soon-badge">
              <span class="badge-icon">üöÄ</span>
              <span>{t.install.comingSoon.badge}</span>
            </div>
            <h2>{t.install.comingSoon.title}</h2>
            <p>{t.install.comingSoon.description}</p>

            <div class="store-badges">
              <div class="store-badge disabled">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
                <div class="store-info">
                  <span class="store-label">{t.install.comingSoon.appStore}</span>
                  <span class="store-name">App Store</span>
                </div>
              </div>
              <div class="store-badge disabled">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                </svg>
                <div class="store-info">
                  <span class="store-label">{t.install.comingSoon.googlePlay}</span>
                  <span class="store-name">Google Play</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>

<style>
  @import '../../styles/theme.css';

  /* Reset & Base */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-primary);
    scroll-behavior: smooth;
  }

  body {
    background: var(--bg-primary);
    color: var(--text-primary);
    overflow-x: hidden;
  }

  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  /* Language Switcher Container */
  .lang-switcher-container {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
    z-index: 100;
    background: rgba(30, 41, 59, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--border-radius-md);
    padding: var(--spacing-xs);
    transition: all 0.3s ease;
  }

  /* Back Link */
  .back-link {
    position: absolute;
    top: var(--spacing-md);
    left: var(--spacing-md);
    z-index: 100;
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--text-secondary);
    text-decoration: none;
    font-size: var(--text-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: rgba(30, 41, 59, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--border-radius-md);
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: var(--text-primary);
    background: rgba(30, 41, 59, 0.8);
    border-color: rgba(245, 158, 11, 0.3);
  }

  /* Install Page */
  .install-page {
    position: relative;
    padding: var(--spacing-4xl) 0 var(--spacing-xl);
    overflow: hidden;
  }

  /* Header */
  .install-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .app-icon-large {
    width: 100px;
    height: 100px;
    margin: 0 auto var(--spacing-lg);
    border: 2px solid rgba(245, 158, 11, 0.4);
    border-radius: var(--border-radius-xl);
    box-shadow: 0 0 40px rgba(245, 158, 11, 0.25);
  }

  .install-header h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 8vw, 2.5rem);
    font-weight: 800;
    letter-spacing: -0.03em;
    margin-bottom: var(--spacing-md);
  }

  .install-subtitle {
    color: var(--text-secondary);
    font-size: var(--text-lg);
    max-width: 400px;
    margin: 0 auto;
  }

  /* Coming Soon Card */
  .coming-soon-card {
    text-align: center;
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-xl);
    margin-top: var(--spacing-xl);
    margin-bottom: 0;
    border: 1px solid rgba(139, 92, 246, 0.3);
    position: relative;
    overflow: hidden;
  }

  .coming-soon-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 200px;
    background: radial-gradient(ellipse, rgba(139, 92, 246, 0.2) 0%, transparent 70%);
    pointer-events: none;
  }

  .coming-soon-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
    color: white;
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
    margin-bottom: var(--spacing-md);
  }

  .coming-soon-card h2 {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 700;
    margin-bottom: var(--spacing-sm);
    position: relative;
  }

  .coming-soon-card p {
    color: var(--text-secondary);
    font-size: var(--text-base);
    margin-bottom: var(--spacing-lg);
    position: relative;
  }

  /* Store Badges */
  .store-badges {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
    position: relative;
  }

  .store-badge {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-lg);
    background: rgba(30, 41, 59, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius-md);
    color: var(--text-secondary);
  }

  .store-badge.disabled {
    opacity: 0.5;
  }

  .store-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .store-label {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
  }

  .store-name {
    font-size: var(--text-sm);
    font-weight: 600;
  }

  /* Current Option */
  .current-option {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .current-option h3 {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 700;
    margin-bottom: var(--spacing-sm);
    color: var(--accent-primary);
  }

  .current-option > p {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
  }

  /* Browser Steps */
  .browser-steps {
    padding: var(--spacing-lg);
    border-radius: var(--border-radius-lg);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .step-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    text-align: left;
  }

  .step-num {
    width: 32px;
    height: 32px;
    min-width: 32px;
    background: var(--gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: var(--text-sm);
    color: var(--text-inverse);
  }

  .step-item p {
    color: var(--text-secondary);
    font-size: var(--text-sm);
    line-height: 1.5;
  }

  /* Important Warning */
  .important-warning {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background: rgba(251, 191, 36, 0.1);
    border: 2px solid rgba(251, 191, 36, 0.4);
    border-radius: var(--border-radius-lg);
    margin-bottom: var(--spacing-xl);
  }

  .warning-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .warning-content {
    text-align: left;
  }

  .warning-content strong {
    display: block;
    color: #FBBF24;
    font-size: var(--text-base);
    margin-bottom: var(--spacing-xs);
  }

  .warning-content p {
    color: var(--text-secondary);
    font-size: var(--text-sm);
    line-height: 1.5;
    margin: 0;
  }

  /* Main CTA */
  .main-cta {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .btn-3d-large {
    padding: 24px 48px;
    font-size: 1.25rem;
  }

  .cta-note {
    color: var(--text-tertiary);
    font-size: var(--text-sm);
    margin-top: var(--spacing-md);
  }

  /* 3D Button Styles */
  .btn-3d {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 20px 40px;
    font-size: 1.125rem;
    font-weight: 700;
    text-decoration: none;
    color: #1a1a1a;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.4);
    transform: translateY(0);
    background:
      linear-gradient(180deg,
        #FFE066 0%,
        #FFD700 15%,
        #FFC107 50%,
        #FF9800 85%,
        #E65100 100%
      );
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.8),
      inset 0 2px 4px rgba(255, 255, 255, 0.4),
      inset 0 -3px 6px rgba(0, 0, 0, 0.15),
      0 4px 0 #B8860B,
      0 6px 0 #8B6914,
      0 8px 25px rgba(255, 165, 0, 0.5),
      0 15px 40px rgba(255, 140, 0, 0.3);
  }

  .btn-3d::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 55%;
    background: linear-gradient(180deg,
      rgba(255, 255, 255, 0.5) 0%,
      rgba(255, 255, 255, 0.25) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    border-radius: 50px 50px 100px 100px;
    pointer-events: none;
  }

  .btn-3d:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.9),
      inset 0 2px 4px rgba(255, 255, 255, 0.5),
      inset 0 -3px 6px rgba(0, 0, 0, 0.1),
      0 8px 0 #B8860B,
      0 10px 0 #8B6914,
      0 12px 35px rgba(255, 165, 0, 0.6),
      0 20px 50px rgba(255, 140, 0, 0.4);
  }

  .btn-3d:active {
    transform: translateY(2px) scale(0.98);
  }

  .btn-3d-content {
    display: flex;
    align-items: center;
    gap: 12px;
    position: relative;
    z-index: 2;
  }

  .btn-3d-icon {
    font-size: 1.5rem;
  }

  .btn-3d-text {
    letter-spacing: 0.5px;
  }

  .btn-3d-shine {
    position: absolute;
    top: 0;
    left: -150%;
    width: 60%;
    height: 100%;
    background: linear-gradient(
      100deg,
      transparent 0%,
      rgba(255, 255, 255, 0.6) 50%,
      transparent 100%
    );
    transform: skewX(-25deg);
    transition: left 0.6s ease;
    z-index: 3;
  }

  .btn-3d:hover .btn-3d-shine {
    left: 150%;
  }

  /* Features Reminder */
  .features-reminder {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    justify-content: center;
    margin-bottom: 0;
  }

  .feature-pill {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    color: var(--color-profit);
  }

  .feature-pill span {
    font-weight: 700;
  }

  /* Text Gradient */
  .text-gradient {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Responsive */
  @media (max-width: 480px) {
    .install-page {
      padding: var(--spacing-3xl) 0 var(--spacing-2xl);
    }

    .back-link {
      top: var(--spacing-sm);
      left: var(--spacing-sm);
      padding: var(--spacing-xs) var(--spacing-sm);
    }

    .back-link span {
      display: none;
    }

    .lang-switcher-container {
      top: var(--spacing-sm);
      right: var(--spacing-sm);
    }

    .store-badges {
      flex-direction: column;
      align-items: center;
    }

    .btn-3d-large {
      padding: 20px 32px;
      font-size: 1.125rem;
    }
  }
</style>
